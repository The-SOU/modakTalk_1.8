<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".navigation.LaunchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dots_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/launch_btn_administer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_logo_talk" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_launch_background" />


    </LinearLayout>

    <Button

        android:id="@+id/launch_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/launch_terms_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout_dialog_radius"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:text="모닥 시작하기"
        android:textColor="@color/dots_color"
        android:textSize="@dimen/fontsize_button" />

    <LinearLayout
        android:id="@+id/launch_terms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/launch_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:text="개인정보 처리방침"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/launch_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:text="이용약관"
            android:textColor="@color/white"
            android:textSize="15sp" />





    </LinearLayout>


</RelativeLayout>